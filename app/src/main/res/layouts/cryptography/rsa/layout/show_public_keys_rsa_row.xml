<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView1_rsa_row_hf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Public Key"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/textView_dateTime_showRsaPublicKeys_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:text="Date"
            android:textColor="#a9a9a9"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_keyBits_showRsaPublicKeys_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="2048 bits"
            android:textColor="#a9a9a9"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/saveBtn_ShowPublicKeysRsa_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableTint="@color/colorAccent"
            android:padding="10sp"
            android:text="Save"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/deleteBtn_ShowPublicKeysRsa_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/saveBtn_ShowPublicKeysRsa_row"
            android:drawableTint="@color/colorAccent"
            android:padding="10sp"
            android:text="Delete"
            android:layout_marginEnd="10sp"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            tools:ignore="TouchTargetSizeCheck" />

        <ProgressBar
            android:id="@+id/progressBarShowPublicKeysRsa_row"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/saveBtn_ShowPublicKeysRsa_row"
            android:layout_marginEnd="25sp"/>

    </RelativeLayout>

</LinearLayout>